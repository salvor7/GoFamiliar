##:include debug.kv
##:import Logger kivy.logger.Logger


<Button>
    background_color: 0, 0, 0, 0


<GoFamiliar>:
    orientation: 'horizontal'
    padding: 20
    spacing: 10

    PlayPanel:
        id: _play_panel

    AnalysisPanel:
        id: _analysis_panel


<PlayPanel>
    orientation: 'vertical'

    Board:

    Label:
        id: _move_info_label
        text: ''
        size_hint: 1, 0.06
        halign: 'left'

    Button:
        text: 'Submit Move'
        size_hint: 0.5, .1


<AnalysisPanel>
    orientation: 'vertical'

    AnalysisBoard:
        id: _board

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, .06

        Label:
            text: 'Simulation Count:'

        Label:
            text: ''

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, .1

        Button:
            text: 'Start Analysis'

        Button:
            text: 'Up Move Tree'


<Board>:
    BoardImage:
        id: _image_id
        pos: self.parent.x, self.parent.y
    ButtonGrid:
        size: _image_id.norm_image_size
        pos: _image_id.pos
        padding: _image_id.width * 0.005
        spacing: _image_id.width * 0.005


<AnalysisBoard>:
    BoardImage:
        id: _image_id
        pos: self.parent.x, self.parent.y

    AnalysisButtonGrid:
        id: _analysis_grid
        size: _image_id.norm_image_size
        pos: _image_id.pos
        padding: _image_id.width * 0.005
        spacing: _image_id.width * 0.005


<BoardImage>:
    source: 'static_assets/board.png'


<ButtonGrid>:
    size_hint: None, None
    pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }
    cols: 19


<AnalysisButtonGrid>:
    size_hint: None, None
    pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }
    cols: 19


<StoneImage>
    sourceblack: 'static_assets/stone_black.png'
    sourcewhite: 'static_assets/stone_white.png'
    source: self.sourcewhite
    pos: self.parent.pos
    size: self.parent.size
    color: 0, 0, 0, 0


<Intersection>
    stone_image: _stone_id
    StoneImage:
        id: _stone_id
